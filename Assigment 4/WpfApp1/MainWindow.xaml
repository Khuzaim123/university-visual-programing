<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Button x:Name="Add" Content="Add Player&#xD;&#xA;" HorizontalAlignment="Left" Margin="77,142,0,0" VerticalAlignment="Top" Width="69" Height="21" Click="Add_Click"/>
        <Button x:Name="Remove" Content="Remove Player" HorizontalAlignment="Left" Margin="202,142,0,0" VerticalAlignment="Top" Width="83" Height="21" Click="Remove_Click"/>
        <Label Content="Enter Player Name:" HorizontalAlignment="Left" Margin="77,70,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="text" HorizontalAlignment="Left" Margin="202,74,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <ListBox x:Name="players" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="373,47,10,10"/>

    </Grid>
</Window>
